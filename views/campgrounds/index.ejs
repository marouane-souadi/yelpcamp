<% include ../partials/header %>
<div class="jumbotron">
<h1> Campgrounds Page</h1>

<p>
   <a class="btn btn-primary btn-large " href="/campgrounds/new">Add a new Camground</a>
</p>
 </div>

<div class="row" style="display:flex; flex-wrap: wrap;">


 <% campgrounds.forEach(function(campground){%>
    <div class="col-md-3 col-sm-6">

        <div class="card">
            <img class="card-img-top" src="<%= campground.image %>"> 
            <div class="card-body ">
                <h4 class="text-center"> <%= campground.name %></h4>            
                <p class="text-center"><a class="btn btn-primary btn-sm" href="/campgrounds/<%= campground._id %>">More info</a></p>
            </div>
        </div>
    </div>
 <% }) %>
</div>
 <% include ../partials/footer %>